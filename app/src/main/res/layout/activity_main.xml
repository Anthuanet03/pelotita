<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/cancha"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/punto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="24sp"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bandera1"
                android:layout_width="8dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="argentina.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/center_layout"
            android:layout_marginStart ="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/jugador"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:src="@drawable/ic_persona3"
                />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity = "center"
                android:src="@drawable/arbrito"
                android:textColor = "@color/black"
                android:textSize="60sp"
                android:text="62"
                />
            <ImageButton
                android:id="@+id/fut2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:src="@drawable/ic_person"
                />
        </LinearLayout>

        <LinearLayout
            android:id = "@+id/center_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical = "true"
            android:gravity = "center_vertical"
            android:orientation = "horizontal"
            android:padding = "15dp"
            >
            <ImageButton
                android:id="@+id/restar_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:src="@drawable/ic_persona3"
                />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/futbol_animation"
                android:layout_width="8dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="pelota.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                />
            <ImageButton
                android:id="@+id/result_button"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:src="@drawable/ic_person"
                />

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/punto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bandera2"
                android:layout_width="8dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="canada.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                />

        </LinearLayout>



    </RelativeLayout>
</layout>